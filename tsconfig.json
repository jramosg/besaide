{
	"extends": "astro/tsconfigs/strict",
	"include": [".astro/types.d.ts", "**/*"],
	"exclude": ["dist", "react-email"],
	"types": ["astro/client"],
	"strictNullChecks": true,
	"allowJs": true,
	"compilerOptions": {
		"baseUrl": "src",
		"paths": {
			"@/*": ["*"]
		},
		"jsx": "react-jsx",
		"jsxImportSource": "react"
	}
}
