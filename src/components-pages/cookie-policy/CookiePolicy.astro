---
import { getLangFromUrl, useTranslations } from 'i18n/utils';
import Page from 'layouts/Page.astro';
import { Content as euContent } from 'components-pages/cookie-policy/eu.md';
import { Content as esContent } from 'components-pages/cookie-policy/es.md';
import { getEntry, render } from 'astro:content';
import Container from 'components/Container.astro';

const url = Astro.url;
const lang = getLangFromUrl(url);
const t = useTranslations(lang);
const Content = lang === 'eu' ? euContent : esContent;
console.log('conteent', Content);
---

<Page
	seo={{
		title: t(
			'Besaide Mendizale Elkartea - Lege oharra eta pribatutasun politika'
		)
	}}
	pageClass="content__container article"
>
	<Content />
</Page>

<style>
	.article {
		max-width: 65ch; /* target ~60–66 characters/line */
		width: min(100%, 90vw); /* keep responsive on small screens */
		margin: 0 auto;
		line-height: 1.4–1.6;
		padding: 0 1rem;
	}
</style>
