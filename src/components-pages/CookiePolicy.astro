---
import { getLangFromUrl, useTranslations } from '@/i18n/utils';
import Page from '@/layouts/Page.astro';
import { Content as euContent } from '@/data/cookie-policy/eu.md';
import { Content as esContent } from '@/data/cookie-policy/es.md';

const url = Astro.url;
const lang = getLangFromUrl(url);
const t = useTranslations(lang);
const Content = lang === 'eu' ? euContent : esContent;
---

<Page
	seo={{
		title: t(
			'Besaide Mendizale Elkartea - Lege oharra eta pribatutasun politika'
		)
	}}
	pageClass="content__container article"
>
	<Content />
</Page>

<style>
	.article {
		margin-top: var(--content-margin-top);
	}
</style>
