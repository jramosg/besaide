---
import Hero from '@/components/Hero.astro';
import '@/styles/card.css';
import Sponsors from '@/components/Sponsors.astro';
import Page from '@/layouts/Page.astro';
import { getLangFromUrl, useTranslations } from '@/i18n/utils';
import HomeNews from '@/components/news/HomeNews.astro';
import HomeAgenda from '@/components/HomeAgenda.astro';
import HomeShortcuts from '@/components/HomeShortcuts.astro';
import { CompanyName } from '@/config/company';
import udalaitzImage from '@/assets/udalaitz.webp';

const url = Astro.url;
const lang = getLangFromUrl(url);
const t = useTranslations(lang);
---

<Page
	seo={{
		title: t('nav.home') + ' - ' + CompanyName,
		description: t('home.seo.description'),
		openGraphProps: {
			title: t('nav.home') + ' - ' + CompanyName,
			description: t('home.seo.description'),
			image: udalaitzImage.src
		}
	}}
	pageClass="home-page"
	transparentHeader={true}
>
	<Hero />
	<HomeAgenda />
	<HomeNews />
	<HomeShortcuts />
	<Sponsors />

	<!-- 	<Kontaktua /> -->
</Page>

<style>
	.home-page {
		display: flex;
		flex-direction: column;
		gap: var(--s8);
		margin-bottom: var(--s4);
	}

	:global(.home-section_container) {
		padding: var(--container-padding);
		max-width: var(--container-max-width);
		margin: 0 auto;
		width: 100%;
	}
</style>
