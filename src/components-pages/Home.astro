---
import Hero from 'components/Hero.astro';
import Agenda from '../components/Agenda.astro';
import Historia from '../components/Historia.astro';
import Zerbitzuak from '../components/Zerbitzuak.astro';
import Berriak from '../components/Berriak.astro';
import Kontaktua from '../components/Kontaktua.astro';
import Babesleak from '../components/Babesleak.astro';
import Page from 'layouts/Page.astro';
import { getLangFromUrl, useTranslations } from 'i18n/utils';

const url = Astro.url;
const lang = getLangFromUrl(url);
const t = useTranslations(lang);
---

<Page seo={{ title: t('Besaide Mendizale Elkartea - Hasiera') }}>
	<Hero />
	<Agenda />
	<Historia />
	<Zerbitzuak />
	<Berriak />
	<Babesleak />
	<Kontaktua />
</Page>
