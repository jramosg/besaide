---
import Hero from '@/components/Hero.astro';
import '@/styles/card.css';

// import Historia from '../components/Historia.astro';
//import Zerbitzuak from '../components/Zerbitzuak.astro';
//import Kontaktua from '../components/Kontaktua.astro';
import Sponsors from '@/components/Sponsors.astro';
import Page from 'layouts/Page.astro';
import { getLangFromUrl, useTranslations } from 'i18n/utils';
import HomeNews from '@/components/news/HomeNews.astro';
import HomeAgenda from '@/components/HomeAgenda.astro';
import HomeShortcuts from '@/components/HomeShortcuts.astro';

const url = Astro.url;
const lang = getLangFromUrl(url);
const t = useTranslations(lang);
---

<Page
	seo={{ 
		title: t('nav.home') + ' - Besaide Mendizale Elkartea',
		description: t('home.seo.description')
	}}
	pageClass="home-page"
	transparentHeader={true}
>
	<Hero />
	<!-- 	
	<Historia />
	<Zerbitzuak />
 -->
	<HomeAgenda />
	<HomeNews />
	<HomeShortcuts />
	<Sponsors />

	<!-- 	<Kontaktua /> -->
</Page>

<style>
	.home-page {
		display: flex;
		flex-direction: column;
		gap: var(--s6);
		margin-bottom: var(--s6);
	}

	:global(.home-section_container) {
		padding: var(--container-padding);
		max-width: var(--container-max-width);
		margin: 0 auto;
		width: 100%;
	}
</style>
