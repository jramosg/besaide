---
// Hero component for Besaide homepage
import udalaitzImage from '@/assets/udalaitz.webp';
import { Image } from 'astro:assets';
import Button from '@/components/buttons/Button.astro';
import Carousel from './Carousel.astro';
import CarouselSlide from './CarouselSlide.astro';
import Container from './Container.astro';
import { getLangFromUrl, useTranslations } from '@/i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section class="hero" id="hero">
	<Image src={udalaitzImage} alt="Udalaitz mendia" class="hero-image" />
	<div class="hero-overlay"></div>

	<Carousel
		id="hero-slider"
		class="hero-carousel__container"
		slideWidth="100%"
		slideHeight="100%"
		autoScroll={true}
		autoScrollInterval={5000}
	>
		<CarouselSlide>
			<Container narrow class="hero-slider__container">
				<h1>{t('hero.membership.title')}</h1>
				<p>
					{t('hero.membership.description')}
				</p>
				<Button class="btn-home-hero">{t('hero.membership.cta')}</Button>
			</Container>
		</CarouselSlide>
		<CarouselSlide>
			<Container narrow class="hero-slider__container">
				<h1>{t('hero.federation.title')}</h1>
				<p>
					{t('hero.federation.description')}
				</p>
				<Button class="btn-home-hero">{t('hero.federation.cta')}</Button>
			</Container>
		</CarouselSlide>
		<CarouselSlide>
			<Container narrow class="hero-slider__container">
				<h1>{t('hero.shelter.title')}</h1>
				<p>
					{t('hero.shelter.description')}
				</p>
				<Button class="btn-home-hero">{t('hero.shelter.cta')}</Button>
			</Container>
		</CarouselSlide>
	</Carousel>
</section>

<style>
	.hero {
		--hero-color: white;
		--hero-color-contrast: #000000;
		position: relative;
		min-height: 100vh;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		color: var(--hero-color);
		overflow: hidden;
		margin-top: calc(-1 * var(--header-height));
		padding-top: var(--header-height);

		h1 {
			font-weight: 500;
		}
	}

	.hero-slider__container {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		gap: var(--s5);
		h1 {
			text-align: center;
		}
	}

	.hero-image {
		position: absolute;
		inset: 0;
		width: 100%;
		height: 100%;
		object-fit: cover;
		object-position: center;
		z-index: -1;
	}

	.hero-overlay {
		position: absolute;
		inset: 0;
		background: linear-gradient(
			to bottom,
			rgba(0, 0, 0, 0.3) 0%,
			rgba(0, 0, 0, 0.5) 100%
		);
		z-index: -1;
	}

	.btn-home-hero {
		background-color: var(--theme-card) !important;
		color: var(--theme-primary) !important;
		transition: opacity 0.3s ease;
		&:hover {
			opacity: 0.72;
		}
	}
</style>
