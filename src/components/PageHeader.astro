---
type Props = {
	title: string;
	subtitle?: string;
};

const { title, subtitle }: Props = Astro.props;
---

<>
	<h1 class:list={['page-title', 'h2', subtitle && 'has-subtitle']}>{title}</h1>
	{subtitle && <p class="page-subtitle">{subtitle}</p>}
</>

<style>
	h1.h2 {
		margin-bottom: var(--s6);
	}
	h1.h2.has-subtitle {
		margin-bottom: var(--s2);
	}

	.page-subtitle {
		margin-bottom: var(--s6);
	}
</style>
