---
import { User } from '@lucide/astro';
import { Address } from '../config/company';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<a
	href={Address.url}
	target="_blank"
	rel="noopener noreferrer"
	class="card card--outlined office-hours-card"
>
	<div class="office-hours-card__icon">
		<User size={28} />
	</div>
	<div class="office-hours-card__content">
		<h3 class="office-hours-card__title overline">
			{t('office-hours.title')}
		</h3>
		<p class="office-hours-card__schedule">
			{t('office-hours.schedule') + ', ' + Address.name}
		</p>
		<span class="office-hours-card__link">
			{t('office-hours.directions')}
		</span>
	</div>
</a>

<style>
	.office-hours-card {
		display: flex;
		gap: var(--s5);
		padding: var(--s5);
		text-decoration: none;
	}

	.office-hours-card__icon {
		flex-shrink: 0;
		display: flex;
		align-items: flex-start;
		padding-top: var(--s1);
	}

	.office-hours-card__content {
		flex: 1;
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	.office-hours-card__title {
		margin: 0;
	}

	.office-hours-card__schedule,
	.office-hours-card__address {
		margin: 0;
	}

	.office-hours-card__link {
		color: var(--theme-primary-900);
		text-decoration: underline;
		transition: color 200ms ease;
		align-self: flex-start;
	}

	.office-hours-card__link:hover {
		color: var(--theme-primary-700);
	}

	@media (max-width: 640px) {
		.office-hours-card {
			flex-direction: column;
			gap: 1rem;
		}

		.office-hours-card__icon {
			align-items: center;
			justify-content: center;
		}

		.office-hours-card__title {
			font-size: 1.125rem;
		}

		.office-hours-card__schedule,
		.office-hours-card__address,
		.office-hours-card__link {
			font-size: 0.9375rem;
		}
	}
</style>
