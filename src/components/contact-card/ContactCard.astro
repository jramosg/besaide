---
export interface Props {
	href?: string;
	title: string;
	newTab?: boolean;
}

const { href, title, newTab = false } = Astro.props;

const Tag = href ? 'a' : 'div';
const linkProps = href
	? {
			href,
			...(newTab && { target: '_blank', rel: 'noopener noreferrer' })
		}
	: {};
---

<Tag class="card card--outlined contact-card" {...linkProps}>
	<div class="contact-card__icon">
		<slot name="icon" />
	</div>
	<div class="contact-card__content">
		<h3 class="contact-card__title overline">
			{title}
		</h3>
		<div class="contact-card__body">
			<slot />
		</div>
	</div>
</Tag>

<style>
	.contact-card {
		display: flex;
		gap: var(--s5);
		padding: var(--s5);
		text-decoration: none;
	}

	a.contact-card {
		cursor: pointer;
	}

	.contact-card__icon {
		flex-shrink: 0;
		display: flex;
		align-items: flex-start;
		padding-top: var(--s1);
	}

	.contact-card__content {
		flex: 1;
		display: flex;
		flex-direction: column;
		gap: var(--s2);
	}

	.contact-card__title {
		margin: 0;
	}

	.contact-card__body {
		display: flex;
		flex-direction: column;
		gap: var(--s2);
	}

	.contact-card__body :global(p) {
		margin: 0;
	}

	.contact-card__body :global(.link) {
		color: var(--theme-primary-900);
		text-decoration: underline;
		transition: color 200ms ease;
		align-self: flex-start;
	}

	a.contact-card:hover .contact-card__body :global(.link) {
		color: var(--theme-primary-700);
	}
</style>
