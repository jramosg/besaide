---
import Location from '@/assets/icons/distance.svg';
type Props = {
	title: string;
	desc: string;
};
const { title, desc }: Props = Astro.props;
---

<div class="home-agenda-meta">
	<div class="icon-container">
		<Location height={20} width={14} />
	</div>
	<h4 class="meta-text">{title}</h4>
	<span class="meta-desc">{desc}</span>
</div>

<style>
	.home-agenda-meta {
		display: grid;
		grid-template-columns: auto 1fr;
		grid-template-rows: repeat(2, 1fr);
		column-gap: var(--s2);
	}

	.icon-container {
		grid-row: span 2 / span 2;
		display: flex;
		align-items: center;
	}

	h4,
	p {
		margin-bottom: 0;
	}

    h4 {
        align-content: end;
        font-size: var(--font-size-sm);
    }
    p {
        font-weight: var(--font-weight-medium);
    }
</style>

