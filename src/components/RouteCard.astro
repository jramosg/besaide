---
import { Image } from 'astro:assets';
import { slugify } from '@/utils/string';
import { formatDate } from '@/i18n/utils';
import { getLangFromUrl, useTranslations } from 'i18n/utils';
import { Share2, ArrowRight } from '@lucide/astro';
import type { CollectionEntry } from 'astro:content';

type Props = {
	route: CollectionEntry<'routes'>['data'];
};

const { route }: Props = Astro.props;

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const title = lang === 'eu' ? route.titleEu : route.titleEs;
---

<a
	href={route.wikilocUrl}
	target="_blank"
	rel="noopener noreferrer"
	class="card card--elevated route-card__link"
>
	<div class="route-card__image">
		<Image src={route.image} alt={title} />
	</div>

	<div class="route-card__content">
		<h3 class="route-card__title h4">
			{title}
		</h3>

		<div class="route-card__footer">
			<button class="route-card__share" aria-label={t('Partekatu')}>
				<Share2 />
			</button>
		</div>
	</div>
</a>

<style>
	.route-card__link {
		display: flex;
		flex-direction: column;
		text-decoration: none;
		color: inherit;
		height: 100%;
		max-width: 421px;
		width: 100%;
		overflow: hidden;
	}

	.route-card__image {
		/* Figma: 421.33 x 195px with top border radius */
		width: 100%;
		height: 195px;
		overflow: hidden;
		border-top-left-radius: var(--theme-shape-radius);
		border-top-right-radius: var(--theme-shape-radius);
	}

	.route-card__image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.3s ease;
	}

	.route-card:hover .route-card__image img {
		transform: scale(1.05);
	}

	.route-card__content {
		padding: var(--s4);
		display: flex;
		flex-direction: column;
		gap: 10px;
		flex: 1;
	}

	.route-card__title {
		margin: 0;
		/* Truncate to 2 lines */
		display: -webkit-box;
		-webkit-line-clamp: 2;
		-webkit-box-orient: vertical;
		overflow: hidden;
		text-overflow: ellipsis;
	}

	.route-card__footer {
		display: flex;
		justify-content: space-between;
		align-items: center;
		margin-top: auto;
		padding-top: var(--s2);
	}

	.route-card__share {
		background: none;
		border: none;
		cursor: pointer;
		padding: var(--s2);
		color: var(--theme-text-secondary);
		transition: color 0.2s ease;
		display: flex;
		align-items: center;
		justify-content: center;
		border-radius: 50%;
	}

	.route-card__share:hover {
		color: var(--theme-primary);
		background-color: var(--theme-primary-hover-bg);
	}

	.route-card__more {
		display: flex;
		align-items: center;
		gap: var(--s2);
		transition: gap 0.3s ease;
		color: var(--theme-primary-900);
	}

	.route-card:hover .route-card__more {
		gap: var(--s3);
	}

	.route-card__more svg {
		transition: transform 0.3s ease;
	}

	.route-card:hover .route-card__more svg {
		transform: translateX(4px);
	}

	/* Responsive adjustments */
	@media (max-width: 768px) {
		.route-card {
			max-width: 100%;
		}

		.route-card__image {
			height: 180px;
		}
	}
</style>

<script>
	import { shareContent } from '@/utils/share';

	document.addEventListener('astro:page-load', () => {
		const shareButtons = Array.from(
			document.querySelectorAll('.route-card__share')
		);
		shareButtons.forEach(btn => {
			btn.addEventListener('click', async event => {
				event.preventDefault();
				event.stopPropagation();

				// Find the closest card anchor to get the URL and title
				const anchor = btn.closest('a');
				const url = anchor ? anchor.href : window.location.href;
				const titleEl = anchor ? anchor.querySelector('h3') : null;
				const title = titleEl ? titleEl.textContent.trim() : document.title;
				const subText = anchor
					? anchor.querySelector('p')?.textContent.trim() || ''
					: '';
				const text = title + (subText.length > 0 ? ' - ' + subText : '');

				await shareContent({ title, text, url });
			});
		});
	});
</script>
