---
type Props = {
	narrow?: boolean;
	class?: string;
	tag?: keyof HTMLElementTagNameMap;
	id?: string;
	style?: string;
};
const { narrow, class: classNAme, tag, ...rest }: Props = Astro.props;
const Tag = tag || `div`;
---

<Tag
	class={`content__container ${narrow ? `content__container--narrow` : ``}  ${classNAme || ``}`}
	{...rest}
>
	<slot />
</Tag>
